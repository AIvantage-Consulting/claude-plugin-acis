{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "genesis-persona-output.schema.json",
  "title": "GENESIS Persona Analyst Output",
  "description": "Structured output schema for the genesis-persona-analyst agent (Layer 1). Agent must include a ```json``` block conforming to this schema.",
  "type": "object",
  "required": ["personas", "anti_personas", "needs_hierarchy", "analysis_metadata"],
  "properties": {
    "personas": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "role", "type", "demographics", "key_need", "frustration", "tech_comfort", "accessibility_needs"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^P[0-9]+$",
            "description": "Persona identifier (e.g., P1, P2)"
          },
          "name": {
            "type": "string",
            "minLength": 2,
            "description": "Persona name"
          },
          "role": {
            "type": "string",
            "minLength": 3,
            "description": "Role description"
          },
          "type": {
            "type": "string",
            "enum": ["primary", "secondary"]
          },
          "demographics": {
            "type": "object",
            "properties": {
              "age_range": { "type": "string" },
              "context": { "type": "string" },
              "constraints": { "type": "string" }
            }
          },
          "key_need": { "type": "string", "minLength": 5 },
          "frustration": { "type": "string", "minLength": 5 },
          "tech_comfort": {
            "type": "string",
            "enum": ["low", "medium", "high"]
          },
          "accessibility_needs": {
            "type": "array",
            "items": { "type": "string" }
          },
          "usage_frequency": {
            "type": "string",
            "enum": ["daily", "weekly", "monthly", "occasional"]
          }
        }
      }
    },
    "anti_personas": {
      "type": "array",
      "description": "People we're explicitly NOT designing for",
      "items": {
        "type": "object",
        "required": ["name", "reason"],
        "properties": {
          "name": { "type": "string" },
          "reason": { "type": "string" }
        }
      }
    },
    "needs_hierarchy": {
      "type": "array",
      "description": "Prioritized list of needs across all personas",
      "items": {
        "type": "object",
        "required": ["need", "priority", "affected_personas"],
        "properties": {
          "need": { "type": "string" },
          "priority": {
            "type": "string",
            "enum": ["must-have", "should-have", "nice-to-have"]
          },
          "affected_personas": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "analysis_metadata": {
      "type": "object",
      "required": ["agent_id", "timestamp"],
      "properties": {
        "agent_id": { "type": "string", "const": "genesis-persona-analyst" },
        "timestamp": { "type": "string", "format": "date-time" },
        "confidence": { "type": "string", "enum": ["high", "medium", "low"] },
        "sources_consulted": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}
