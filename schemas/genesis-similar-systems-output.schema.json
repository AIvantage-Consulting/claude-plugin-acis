{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "genesis-similar-systems-output.schema.json",
  "title": "GENESIS Similar Systems Analyst Output",
  "description": "Structured output schema for the genesis-similar-systems-analyst agent (Layer 1). Agent must include a ```json``` block conforming to this schema.",
  "type": "object",
  "required": ["similar_systems", "patterns_extracted", "differentiation", "analysis_metadata"],
  "properties": {
    "similar_systems": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "category", "relevance", "strengths", "weaknesses"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^SYS-[0-9]+$"
          },
          "name": {
            "type": "string",
            "minLength": 2
          },
          "category": {
            "type": "string",
            "enum": ["direct-competitor", "adjacent-market", "analogous-domain", "inspiration"]
          },
          "relevance": {
            "type": "string",
            "enum": ["high", "medium", "low"]
          },
          "url": { "type": "string" },
          "strengths": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          },
          "weaknesses": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          },
          "notable_patterns": {
            "type": "array",
            "items": { "type": "string" }
          },
          "user_sentiment": {
            "type": "string",
            "description": "General user sentiment summary"
          }
        }
      }
    },
    "patterns_extracted": {
      "type": "array",
      "description": "Patterns extracted from similar systems that could inform our design",
      "items": {
        "type": "object",
        "required": ["pattern", "source_systems", "applicability"],
        "properties": {
          "pattern": { "type": "string" },
          "source_systems": {
            "type": "array",
            "items": { "type": "string" }
          },
          "applicability": {
            "type": "string",
            "enum": ["adopt", "adapt", "avoid"]
          },
          "rationale": { "type": "string" }
        }
      }
    },
    "differentiation": {
      "type": "object",
      "required": ["unique_value_proposition", "competitive_gaps"],
      "properties": {
        "unique_value_proposition": {
          "type": "string",
          "minLength": 10,
          "description": "What makes our system different/better"
        },
        "competitive_gaps": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["gap", "our_approach"],
            "properties": {
              "gap": { "type": "string" },
              "our_approach": { "type": "string" }
            }
          }
        },
        "gtm_positioning": {
          "type": "string",
          "description": "Suggested go-to-market positioning statement"
        }
      }
    },
    "analysis_metadata": {
      "type": "object",
      "required": ["agent_id", "timestamp"],
      "properties": {
        "agent_id": { "type": "string", "const": "genesis-similar-systems-analyst" },
        "timestamp": { "type": "string", "format": "date-time" },
        "confidence": { "type": "string", "enum": ["high", "medium", "low"] },
        "sources_consulted": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}
