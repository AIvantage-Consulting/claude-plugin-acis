{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "genesis-journey-output.schema.json",
  "title": "GENESIS Journey Mapper Output",
  "description": "Structured output schema for the genesis-journey-mapper agent (Layer 1). Agent must include a ```json``` block conforming to this schema.",
  "type": "object",
  "required": ["journeys", "touchpoints", "pain_points", "analysis_metadata"],
  "properties": {
    "journeys": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "persona_id", "name", "trigger", "steps", "outcome"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^J[0-9]+$",
            "description": "Journey identifier (e.g., J1, J2)"
          },
          "persona_id": {
            "type": "string",
            "description": "Which persona takes this journey"
          },
          "name": {
            "type": "string",
            "minLength": 5,
            "description": "Journey name"
          },
          "trigger": {
            "type": "string",
            "description": "What initiates this journey"
          },
          "steps": {
            "type": "array",
            "minItems": 2,
            "items": {
              "type": "object",
              "required": ["step_number", "action", "system_response"],
              "properties": {
                "step_number": { "type": "integer", "minimum": 1 },
                "action": { "type": "string" },
                "system_response": { "type": "string" },
                "emotion": {
                  "type": "string",
                  "enum": ["positive", "neutral", "negative", "anxious", "frustrated", "relieved"]
                },
                "accessibility_note": { "type": "string" }
              }
            }
          },
          "outcome": {
            "type": "string",
            "description": "What success looks like for this journey"
          },
          "failure_modes": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "at_step": { "type": "integer" },
                "failure": { "type": "string" },
                "recovery": { "type": "string" }
              }
            }
          },
          "frequency": {
            "type": "string",
            "enum": ["daily", "weekly", "monthly", "one-time", "on-demand"]
          },
          "criticality": {
            "type": "string",
            "enum": ["critical", "important", "nice-to-have"]
          }
        }
      }
    },
    "touchpoints": {
      "type": "array",
      "description": "All system interaction points across journeys",
      "items": {
        "type": "object",
        "required": ["id", "name", "type"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["screen", "notification", "api", "background", "voice", "hardware"]
          },
          "journeys_using": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "pain_points": {
      "type": "array",
      "description": "Identified pain points across all journeys",
      "items": {
        "type": "object",
        "required": ["description", "severity", "affected_journeys"],
        "properties": {
          "description": { "type": "string" },
          "severity": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"]
          },
          "affected_journeys": {
            "type": "array",
            "items": { "type": "string" }
          },
          "mitigation": { "type": "string" }
        }
      }
    },
    "analysis_metadata": {
      "type": "object",
      "required": ["agent_id", "timestamp"],
      "properties": {
        "agent_id": { "type": "string", "const": "genesis-journey-mapper" },
        "timestamp": { "type": "string", "format": "date-time" },
        "confidence": { "type": "string", "enum": ["high", "medium", "low"] }
      }
    }
  }
}
